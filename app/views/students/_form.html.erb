<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @student, html: { multipart: true } do |f| %>
      <%= f.error_notification %>

      <% if @under_age == true %>
        <div class="field">
          <div class="control">
            <%= f.input :parent_email, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" }, placeholder: "example@domain.com", hint: "Since you are under the age of 18. You need to supply a secondary email, preferably a parent/guardian." %>
          </div>
        </div>
      <% end %>

        <div class="field">
          <div class="control">
            <%= f.input :description, required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="columns">
<!--
          <div class="field column is-2">
            <div class="control">
              <%#= f.input :age, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div> -->

        </div>


        <div class="columns">

           <div class="field column is-4">
             <div class="control">
               <label class="label">Subjects</label>
               <div class="control has-icons-left">
                 <span class="select">
                   <%= f.input_field :grade, collection: Student::Grade, prompt: "Grade" %>
                 </span>
                 <span class="icon is-small is-left">
                   <i class="fa fa-tag"></i>
                 </span>
               </div>
             </div>
            </div>

        </div>

        <hr />

        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, class: 'button is-warning' %>
          </div>
        </div>

      <% end %>
  </div>
</div>
